<div class="registration-dialog">
  <form class="form-horizontal bootstrap-form" method="post" action="{{path}}">
    <div class="control-group">
      <label class="control-label" for="parent_name">{{#t "labels.name"}}Your Name{{/t}}</label>
      <div class="controls">
        <input type="text" id="parent_name" name="user[name]">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="parent_email">{{#t "labels.email"}}Your Email{{/t}}</label>
      <div class="controls">
        <input type="text" id="parent_email" name="pseudonym[unique_id]">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="parent_child_username">{{#t "labels.username"}}Child's Username{{/t}}</label>
      <div class="controls">
        <input type="text" id="parent_child_username" name="observee[unique_id]">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="parent_child_password">{{#t "labels.password"}}Child's Password{{/t}}</label>
      <div class="controls">
        <input type="password" id="parent_child_password" name="observee[password]">
      </div>
    </div>
    {{#if terms_required}}
    <div class="control-group">
      <div class="controls">
        <label class="checkbox">
          <input type="checkbox" name="user[terms_of_use]" value="1">
          {{{terms_html}}}
        </label>
      </div>
    </div>
    {{/if}}
    {{#if recaptcha}}
    <div class="control-group">
      <div class="controls">
        <div class="g-recaptcha"></div>
      </div>
    </div>
    {{/if}}
    <div class="control-group">
      <div class="controls">
        <input type="hidden" name="user[initial_enrollment_type]" value="observer">
        <button class="btn btn-primary" type="submit">{{#t "buttons.start_participating"}}Start Participating{{/t}}</button>
      </div>
    </div>
  </form>
</div>
