{{#if pending}}
  <strong class="status-description">{{#t "not_available_until"}}Not available until{{/t}}</strong>
  <span {{ contextSensitiveDatetimeTitle unlockAt }} aria-hidden="true">
    {{datetimeFormatted unlockAt}}
  </span>
  <span class="screenreader-only">{{contextSensitiveDatetimeTitle unlockAt justText=true}}</span>
{{/if}}

{{#if open}}
  <strong class="status-description">{{#t "available_until"}}Available until{{/t}}</strong>
  <span {{ contextSensitiveDatetimeTitle lockAt }} aria-hidden="true">
    {{datetimeFormatted lockAt}}
  </span>
  <span class="screenreader-only">{{contextSensitiveDatetimeTitle lockAt justText=true}}</span>
{{/if}}

{{#if closed}}
  <span class="status-description">{{#t "closed"}}Closed{{/t}}</span>
{{/if}}
