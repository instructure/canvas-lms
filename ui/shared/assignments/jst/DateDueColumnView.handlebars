{{#if multipleDueDates}}
  <strong>{{#t "due"}}Due{{/t}}</strong>

  {{#if allDates}}
  <a title="tooltip"
     class="vdd_tooltip_link"
     aria-describedby="vdd_tooltip_{{selector}}"
     data-tooltip-selector="#vdd_tooltip_{{selector}}"
     {{#if linkHref}}href="{{linkHref}}"{{/if}}
     >{{#t "multiple_dates"}}Multiple Dates{{/t}}</a>

  <div id="vdd_tooltip_{{selector}}" style="display:none;">
    <dl class="vdd_tooltip_content dl-horizontal">
      {{#each allDates}}
        <div class="clearfix">
          <dt>{{dueFor}}</dt>
          <dd>
            {{#if dueAt}}
              <span {{contextSensitiveDatetimeTitle dueAt}}>
                {{tDateToString dueAt 'short'}}
              </span>
            {{else}}
               -
            {{/if}}
          </dd>
        </div>
      {{/each}}
    </dl>
  </div>
  {{else}}
    {{#t "multiple_dates"}}Multiple Dates{{/t}}
  {{/if}}
{{else}}
  {{#if singleSectionDueDate}}
    <strong>{{#t "due_date"}}Due{{/t}}</strong>
    <span {{contextSensitiveDatetimeTitle singleSectionDueDate}} aria-hidden="true">
      {{datetimeFormatted singleSectionDueDate}}
    </span>
    <span class="screenreader-only">{{contextSensitiveDatetimeTitle singleSectionDueDate justText=true}}</span>
  {{else}}
      {{#if todo_date}}
      <strong>{{#t "todo_date"}}To do{{/t}}</strong>
      <span {{contextSensitiveDatetimeTitle todo_date}} aria-hidden="true">
        {{datetimeFormatted todo_date}}
      </span>
      <span class="screenreader-only">{{contextSensitiveDatetimeTitle todo_date justText=true}}</span>
    {{/if}}
  {{/if}}
{{/if}}
