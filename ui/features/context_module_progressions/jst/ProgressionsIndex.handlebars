<h1 class="screenreader-only">{{#t "progression_header"}}Module Progression{{/t}}</h1>
<div class="module-progress-view">
  <div
    class="module-progress-view__modules"
    id="progression_modules"
    aria-busy="true"
    aria-live="polite"
    aria-relevant="additions"
    aria-atomic="false"
  >
  </div>
  <div
    class="module-progress-view__students"
    id="progression_students"
    aria-busy="true"
  >
    <div class="header">
      <h3>{{#t "student_progress"}}Student Progress{{/t}}</h3>
      <a title="{{#t "back_to_modules"}}Back to Modules Page{{/t}}" href="{{ modules_url }}">
        <i class="icon-x standalone-icon"></i>
        <span class="screenreader-only">{{#t "back_to_modules"}}Back to Modules Page{{/t}}</span>
      </a>
    </div>
    {{#if collection.length}}
      <ul class="collectionViewItems"></ul>
    {{else}}
      {{#if collection.atLeastOnePageFetched}}
        <p>{{#t "no_students_found"}}No students were found{{/t}}</p>
      {{/if}}
    {{/if}}
  </div>
</div>