{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "lineWidth": 100,
      "quoteStyle": "single",
      "bracketSpacing": false,
      "arrowParentheses": "asNeeded"
    }
  },
  "linter": {
    "enabled": false
  }
}
