<% @routes.each do |route| %>
  <% route_path = route.path.spec.to_s.sub("(.json)(.:format)", "")
     if route.verb.source =~ /\^?(\w*)\$/
       verb = $1.upcase
     else
       verb = route.verb.source
     end
     next if route_path =~ /\.json$/ %>
  <h3 class='endpoint'>
    <%= verb %> <%= route_path %>
  </h3>
<% end %>
