#!/bin/bash

set -e

if [ -f "config/consul.yml" ]; then # canvas is running in docker
  docker-compose run --rm --no-deps \
    -e RAILS_ENV=test \
    -e RUN_API_CONTRACT_TESTS=1 \
    web bundle exec rake pact:verify
else
  RAILS_ENV=test \
  RUN_API_CONTRACT_TESTS=1 \
  bundle exec rake pact:verify
fi
