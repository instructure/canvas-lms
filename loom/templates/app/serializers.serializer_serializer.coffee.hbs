define ['ember-data'], ({RESTSerializer}) ->

  RESTSerializer.extend

    extractArray: (store, type, payload, id, requestType) ->
      data = {}
      data[type.typeKey+'s'] = payload
      this._super(store, type, data, id, requestType)

    extractSingle: (store, type, payload, id, requestType) ->
      data = {}
      data[type.typeKey] = payload
      this._super(store, type, data, id, requestType)

