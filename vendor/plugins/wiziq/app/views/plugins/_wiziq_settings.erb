<%= fields_for :settings, OpenObject.new(settings) do |f| %>
  <table style="width: 500px;" class="formtable">
    <tr>
      <td colspan="2">
        <%= mt :description, "You will need access to a [Wiziq](%{url}) account.", :url => "http://wiziq.com" %>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :api_url, :en => "Api Url" %></td>
      <td>
        <%= f.text_field :api_url,:size => "90" %> <%= t :api_url_description, "(e.g. http://class.api.wiziq.com/)" %>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :access_key, :en => "Access Key" %></td>
      <td>
        <%= f.text_field :access_key %>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :secret_key, :en => "Secret Key" %></td>
      <td>
        <%= f.text_field :secret_key %>
      </td>
    </tr>
  </table>
<% end %>
