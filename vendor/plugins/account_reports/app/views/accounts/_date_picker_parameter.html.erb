<% if start_at_option %>
  <tr>
    <td><%= t('account_reports.default.start.parameters.header', %{Start at:}) %>
      <input type="text" name="parameters[start_at]" class="datetime_field" value="<%= date_string(@term.try(:start_at)) %>" />
    </td>
  </tr>
<%end%>
<% if end_at_option %>
  <tr>
    <td>
      <%= t('account_reports.default.end.parameters.header', %{End at:}) %>
      <input type="text" name="parameters[end_at]" class="datetime_field" value="<%= date_string(@term.try(:end_at)) %>" />
    </td>
  </tr>
<%end%>
