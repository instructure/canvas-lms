<%= fields_for :settings, OpenObject.new(settings) do |f| %>
  <table style="width: 500px;" class="formtable">
    <tr>
      <td colspan="2">
        <%= mt :description, "You will need access to an [Academic Benchmark](%{url}) account.", :url => "http://www.academicbenchmarks.com/" %>
      </td>
    </tr>
    <tr>
      <td colspan="2" style="font-weight: bold; color: #FF0000;">
        <%= t "The importer will be migrating from API v3 to v4.1. Credentials will not change, but you should ensure your account has access to v4.1 by February 2021." %>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :partner_id, :en => "Partner ID" %></td>
      <td>
        <%= f.text_field :partner_id,:size => "90" %>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :partner_key, :en => "Partner Key" %></td>
      <td>
        <%= f.text_field :partner_key %>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :common_core_guid, :en => "Common Core GUID (optional)" %></td>
      <td>
        <%= f.text_field :common_core_guid %> <%= t :common_core_guid, "(e.g. %{guid})", :guid => AcademicBenchmark::Converter::COMMON_CORE_GUID %>
      </td>
    </tr>
  </table>
<% end %>
