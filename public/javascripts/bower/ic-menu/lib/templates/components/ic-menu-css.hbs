ic-menu {
  display: inline-block;
}

ic-menu-list {
  position: absolute;
  display: none;
}

ic-menu-list[aria-expanded="true"] {
  display: block;
}

ic-menu-list {
  outline: none;
  background: #fff;
  border: 1px solid #aaa;
  border-radius: 3px;
  box-shadow: 2px 2px 20px rgba(0, 0, 0, 0.25);
  list-style-type: none;
  padding: 2px 0px;
  font-family: "Lucida Grande", "Arial", sans-serif;
  font-size: 12px;
}

ic-menu-item {
  display: block;
  padding: 4px 20px;
  cursor: default;
  white-space: nowrap;
}


ic-menu-item:focus {
  background: #3879D9;
  color: #fff;
  outline: none;
}

ic-menu-item[aria-disabled="true"] {
  color: #999;
}

ic-menu-item[aria-disabled="true"]:focus {
  background: #ccc;
  color: #000;
}

ic-menu-item a {
  color: inherit;
  text-decoration: none;
}

