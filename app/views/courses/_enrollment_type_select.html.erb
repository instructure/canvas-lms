<%= label_tag :enrollment_type, :en => "Add More" %>
<select name="enrollment_type" title="<%= t('titles.enrollment_type', 'Enrollment Type') %>" id="enrollment_type" class="span2">
  <% if can_do(@context, @current_user, :manage_students) %>
    <%= raw role_select_options(@all_roles.find { |r| r[:base_role_name] == 'StudentEnrollment' }) %>
  <% end %>
  <% if can_do(@context, @current_user, :manage_admin_users) %>
    <%= raw role_select_options(@all_roles.find { |r| r[:base_role_name] == 'TeacherEnrollment' }, true) %>
    <%= raw role_select_options(@all_roles.find { |r| r[:base_role_name] == 'TaEnrollment' }, true) %>
  <% elsif @context.teacherless? %>
    <%= raw role_select_options(@all_roles.find { |r| r[:base_role_name] == 'TeacherEnrollment' }, true) %>
  <% end %>
  <%= raw role_select_options(@all_roles.find { |r| r[:base_role_name] == 'ObserverEnrollment' }) %>
  <%= raw role_select_options(@all_roles.find { |r| r[:base_role_name] == 'DesignerEnrollment' }) %>

</select>
