<% 
  content_for :page_title, join_title(t(:page_title, "Course Details"), @context.name)
  jammit_css :course_settings
  js_bundle :course_settings
  @active_tab = "settings"

  enrollment_hashes  = {} 
  ['StudentEnrollment', 'TeacherEnrollment', 'TaEnrollment', 'ObserverEnrollment', 'DesignerEnrollment'].each do |type|
    enrollment_hashes[type] = {} 
    list = @context.detailed_enrollments.select{|e| e.type == type && e.active_or_pending?}.sort_by{|e| e.user.sortable_name.downcase rescue 'a' }
    if type == 'StudentEnrollment' && @context.visibility_limited_to_course_sections?(@current_user)
      user_ids = @context.students_visible_to(@current_user).map(&:id)
      list = list.select{|e| user_ids.include?(e.user_id) }
    end
    list.each{|e| enrollment_hashes[type][e.user] ||= []; enrollment_hashes[type][e.user] << e }
  end
  can_rename_course = can_do(@context.account, @current_user, :manage_courses) || !@context.root_account.settings[:prevent_course_renaming_by_teachers]
  students = enrollment_hashes['StudentEnrollment'].map{|k, v| v[0]}
  teachers = enrollment_hashes['TeacherEnrollment'].map{|k, v| v[0]}
  tas = enrollment_hashes['TaEnrollment'].map{|k, v| v[0]}
  observers = enrollment_hashes['ObserverEnrollment'].map{|k, v| v[0]}
  designers = enrollment_hashes['DesignerEnrollment'].map{|k, v| v[0]}
  has_multiple_sections = @context.course_sections.active.count > 1

  publishing_enabled = @context.allows_grade_publishing_by(@current_user) && can_do(@context, @current_user, :manage_grades)

  can_see_users = can_do(@context, @current_user, :read_roster, :manage_students, :manage_admin_users)
%>
<% content_for :right_side do %>

  <div class="rs-margin-lr rs-margin-top">
    <% if can_do(@context, @current_user, :use_student_view) %>
      <%= link_to image_tag("student_view_icon.png") + " " + t('links.student_view', %{Student View}), course_student_view_path(@context), { :method => :post, :class => 'button button-sidebar-wide student_view_button' }%>
    <% end %>
    <% if can_do(@context, @current_user, :read_reports) %>
      <a href="<%= context_url(@context, :context_statistics_url) %>" class="button button-sidebar-wide"><%= image_tag "graph.png" %> <%= t('links.stats', %{Course Statistics}) %></a>
    <% end %>
    <% if can_do(@context, @current_user, :read) %>
      <a href="<%= calendar_url_for(@context) %>" class="button button-sidebar-wide" id="course_calendar_link"><%= image_tag "calendar_icon.png" %> <%= t('links.calendar', %{Course Calendar}) %></a>
    <% end %>

    <% if can_do(@context, @current_user, :change_course_state) %>
      <% if @context.completed? %>
        <% form_tag context_url(@context, :context_unconclude_url) do %>
          <button class="button button-sidebar-wide" type="submit"><%= image_tag "add.png" %><%= t('buttons.unconclude', %{Un-Conclude Course}) %></button>
        <% end %>
      <% else %>
        <a href="<%= context_url(@context, :context_confirm_action_url, :event => 'conclude') %>" class="delete_course_link button button-sidebar-wide"><%= image_tag "delete.png" %><%= t('links.conclude', %{End this Course}) %></a>
      <% end %>
    <% end %>
    <% if can_do(@context, @current_user, :delete) && !@context.deleted? %>
      <a href="<%= context_url(@context, :context_confirm_action_url, :event => 'delete') %>" class="delete_course_link button button-sidebar-wide"><%= image_tag "delete.png" %><%= t('links.delete', %{Permanently Delete this Course}) %></a>
    <% end %>
    <% if show_user_create_course_button(@current_user) && can_do(@context, @current_user, :read) %>
      <a href="<%= context_url(@context, :context_start_copy_url) %>" class="button button-sidebar-wide"><%= image_tag "file_multiple.png" %><%= t('links.copy', %{Copy this Course}) %></a>
    <% end %>
    <% if can_do(@context, @current_user, :manage_content, :manage_files, :manage_quizzes) %>
      <a href="<%= context_url(@context, :context_imports_url) %>" class="button button-sidebar-wide import_content"><%= image_tag "file_multiple.png" %><%= t('links.import', %{Import Content into this Course}) %></a>
    <% end %>
    <% if can_do(@context, @current_user, :read) %>
      <a href="<%= context_url(@context, :course_content_exports_url) %>" class="button button-sidebar-wide"><%= image_tag "file_multiple.png" %><%= t('links.export_content', %{Export Course Content}) %></a>
    <% end %>
    <% if can_do(@context, @current_user, :manage_content) %>
      <a href="<%= context_url(@context, :course_reset_url) %>" class="button button-sidebar-wide reset_course_content_button"><%= image_tag "delete.png" %><%= t('links.reset', %{Reset Course Content}) %></a>
      <div id="reset_course_content_dialog" style="display: none;">
          <%= mt 'help.reset_course_content', %{Resetting course content will permanently delete all associated assignments, discussions, quizzes, modules, rubrics, pages, files, learning outcomes, question banks, collaborations, conferences, or any other content.  This action is irreversible, and the data *cannot* be recovered. Are you sure you wish to continue?} %>
          <% form_for @context, :url => context_url(@context, :course_reset_url), :html => {:method => 'post'} do %>
            <div class="button-container">
              <button type="submit" class="submit_button button"><%= t('buttons.reset', %{Reset Course Content}) %></button>
              <button type="button" class="cancel_button button-secondary"><%= t('#buttons.cancel', %{Cancel}) %></button>
            </div>
          <% end %>
        </div>
    <% end %>
    <table class="summary" style="margin-top: 20px;">
      <thead>
      <tr>
        <th colspan="2"><%= t('headings.current_users', %{Current Users}) %></th>
      </tr>
      </thead>
      <tr>
        <td><%= before_label('students', %{Students}) %></td>
        <td class="student_count"><%= students.empty? ? t('none', "None") : students.length %></td>
      </tr>
      <tr>
        <td><%= before_label('teachers', %{Teachers}) %></td>
        <td class="teacher_count"><%= teachers.empty? ? t('none', "None") : teachers.length %></td>
      </tr>
      <tr>
        <td><%= before_label('tas', %{TAs}) %></td>
        <td class="ta_count"><%= tas.empty? ? t('none', "None") : tas.length %></td>
      </tr>
      <tr>
        <td><%= before_label('observers', %{Observers}) %></td>
        <td class="observer_count"><%= observers.empty? ? t('none', "None") : observers.length %></td>
      </tr>
      <tr>
        <td><%= before_label('designers', %{Designers}) %></td>
        <td class="designer_count"><%= designers.empty? ? t('none', "None") : designers.length %></td>
      </tr>
    </table>
  </div>
<% end %>

<div id="course_details_tabs" style="display:none;">
  <ul>
    <li><a href="#tab-details"><%= t('tabs.details', %{Course Details}) %></a></li>
    <li><a href="#tab-sections"><%= t('tabs.sections', %{Sections}) %></a></li>
    <% if can_see_users %>
      <li><a href="#tab-users" id="tab-users-link"><%= t('tabs.users', %{Users}) %></a></li>
    <% end %>
    <% if can_do @context, @current_user, :update %>
      <li><a href="#tab-navigation"><%= t('tabs.navigation', %{Navigation}) %></a></li>
    <% end %>
    <% if can_do @context, @current_user, :update %>
      <li><a href="#tab-tools" id="tab-tools-link"><%= t('tabs.tools', %{External Tools}) %></a></li>
    <% end %>
    <% if publishing_enabled %>
      <li><a href="#tab-grade-publishing" id="tab-grade-publishing-link"><%= t('tabs.grade_publishing', %{Grade Publishing}) %></a></li>
    <% end %>
    <% if @context.root_account.settings[:enable_alerts] && can_do(@context, @current_user, :manage_interaction_alerts) %>
      <li><a href="#tab-alerts" id="tab-alerts-link"><%= t('tabs.alerts', %{Alerts}) %></a></li>
    <% end %>
  </ul>
  <div id="tab-details">
    <h2><%= t('headings.details', %{Course Details}) %></h2>
