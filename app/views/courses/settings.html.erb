              <%= f.check_box :show_public_context_messages %>
              <%= f.label :show_public_context_messages, :en => "collect public messages for this hashtag" %>
            </span></div>
          </td>
        <% end %>
      </tr>
      <tr>
        <td style="width: 10%; white-space: nowrap;"><%= f.blabel :course_code, :en => "Course Code" %></td>
