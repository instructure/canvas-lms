            <%= f.hidden_field :service, :value => "skype" %>
            <table class="formtable">
              <tr>
                <td><%= f.label :user_name, "Skype Name:" %></td>
                <td><%= f.text_field :user_name, :style => "width: 150px;" %></td>
              </tr><tr>
