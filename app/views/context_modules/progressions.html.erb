<% jammit_css :context_module_progressions %>
<% content_for :page_title, join_title(t('titles.student_progression', "Module Progression by Student"), @context.name) %>
<% add_crumb t('titles.student_progress', 'Student Progress'), context_url(@context, :progressions_context_context_modules_url) %>
<% js_env :COURSE_ID => @context.id %>
<% js_env :MODULES_URL => context_url(@context, :context_context_modules_url) %>
<% js_env :COURSE_USERS_PATH => context_url(@context, :context_users_url) %>
<% if @restrict_student_list %>
  <% js_env :RESTRICTED_LIST => true %>
  <% js_env :VISIBLE_STUDENTS => @visible_students %>
<% end %>
<% js_bundle :context_module_progressions %>