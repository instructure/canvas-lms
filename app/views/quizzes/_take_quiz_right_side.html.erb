<div class="rs-margin-lr rs-margin-top">
  <% if @submission && params[:preview] %>
    <a id="preview_mode_link" href="<%= context_url(@context, :edit_context_quiz_url, @quiz) %>" class="btn button-sidebar-wide"><%= image_tag "edit.png" %> <%= @quiz.survey? ? t('links.keep_editing_survey', "Keep Editing This Survey") : t('links.keep_editing_quiz', "Keep Editing This Quiz") %></a><br/>
  <% end %>

  <%= render "quizzes/question_list_right_side" %>
  
  <% if @submission.finished_at %>
    <div class="quiz_score">
      <%= before_label(:score, "Score") %>
      <%= score_out_of_points_possible(@submission.score, @quiz.points_possible, :class => 'score_value') %>
    </div>
  <% end %>
  <div>
    <span class="time_header"><%= before_label(:time_running, "Time Running") %></span>
    <span style="font-size: 0.8em; padding-left: 10px;">
      <a href="#" class="hide_time_link"><%= t('links.hide_time_running', "Hide") %></a>
    </span>
    <% if @submission.end_at %>
      <div style="font-size: 0.8em;">
        <%= before_label(:attempt_due, "Attempt due") %>
        <%= datetime_string(@submission.end_at) %>
      </div>
    <% end %>
    <div class="clear"></div>
  </div>
  <div class="time_running"></div>
</div>

