<% score = score_out_of_points_possible(
  before_regrade ? version.score_before_regrade : version.score,
  params[:preview] ? version.points_possible_at_submission_time : @quiz.points_possible)
%>
<span aria-label="<%= t('score', 'Score') %>: <%= score %>">
  <%= score %>
</span>
<% if version.pending_review? %>
  <span aria-label="<%= t 'pending_review', 'Pending Review' %>">*</span>
<% end %>
