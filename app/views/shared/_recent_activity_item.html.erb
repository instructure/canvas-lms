<% item = recent_activity_item %>
<tr>
  <td>
    <% if item.unread %>
      <div class="unread"><span class="accessibly-hidden"><%= t(:unread, "Unread") %></span></div>
    <% end %>
  </td>
  <td>
    <a href="<%= item.path %>" class="content_summary">
      <span class="fake-link"><%= item.context.name %></span>
      <strong><%= item.state %></strong>
      <%= item.summary %>
    </a>
  </td>
  <td class="date"><%= datetime_string(item.updated_at) %></td>
  <td class="remove">
    <% translated_close = t :close, 'close' %>
    <a class="close ignore-item" href="#" data-url="<%= dashboard_ignore_stream_item_url(item.stream_item_id) %>" data-remove='tr' title="<%= translated_close %>" aria-label="<%= translated_close %>" role="button">Ã—</a>
  </td>
</tr>
