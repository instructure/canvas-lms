<% 
  add_crumb(t('#crumbs.people', "People"), context_url(@context, :context_users_url))
  add_crumb(t('#crumbs.prior_users', "Prior Users"))
  @active_tab="people"
%>
<% content_for :page_title, t('titles.prior_users', "Prior Users") %>

<% content_for :right_side do %>
  <div class="rs-margin-lr rs-margin-top">
    <a href="<%= context_url(@context, :context_users_url) %>" class="button button-sidebar-wide"><%= image_tag "group.png" %> <%= t('links.back_to_people', %{Back to People}) %></a>
  </div>
<% end %>

<% jammit_css :prior_users %>
<h2><%= t('headings.prior_users', %{Prior Users}) %></h2>
<table id="users">
  <thead>
    <tr>
      <th><%= t('#table_headings.name', %{Name}) %></th>
      <th><%= t('#table_headings.type', %{Type}) %></th>
      <th><%= t('#table_headings.total', %{Total}) %></th>
    </tr>
  </thead>
  <tbody>
    <% @prior_memberships.each do |enrollment| %>
      <tr>
        <td class="name">
          <%= link_to(enrollment.user.last_name_first, context_url(@context, :context_user_url, enrollment.user_id)) %>
          <div class="email">
            <%= enrollment.user.email %>
          </div>
        </td>
        <td class="type">
          <%= enrollment.readable_type %>
        </td>
        <td class="score"><%= link_to(enrollment.computed_final_score || '--', context_url(@context, :context_student_grades_url, enrollment.user_id)) if enrollment.student? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
