<%= fields_for :settings, OpenObject.new(settings) do |f| %>
  <table style="width: 500px;" class="formtable">
    <tr>
      <td colspan="2">
        <p><%= t :description, "This plugin gives instructors feedback on how to make their course content more accessible and allows students to download automatically re-mediated files." %></p>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :client_id, :en => "Client ID" %></td>
      <td><%= f.text_field :client_id %></td>
    </tr>
    <tr>
      <td><%= f.blabel :secret, :en => "API Key" %></td>
      <td><%= f.text_field :secret %></td>
    </tr>
    <tr>
      <td><%= f.blabel :base_url, :en => "Base URL" %></td>
      <td><%= f.text_field :base_url %></td>
    </tr>
  </table>
<% end %>

