<%= fields_for :settings do |f| %>
  <table style="width: 500px;" class="formtable">
    <tr>
      <td colspan="2">
        <p><%= t :description, "This plugin integrates with Canvadocs (or any
        Box View compatible API) to provide an HTML5 document previewer." %></p>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :api_key, :en => "API Key" %></td>
      <td><%= f.text_field :api_key, value: settings[:api_key] %></td>
    </tr>
    <tr>
      <td><%= f.blabel :base_url, :en => "Base URL" %></td>
      <td><%= f.text_field :base_url, value: settings[:base_url] %></td>
    </tr>
    <tr>
      <td><%= f.blabel :annotations_supported, :en => "Annotations Supported" %></td>
      <td><%= f.check_box :annotations_supported, checked: Canvas::Plugin.value_to_boolean(settings[:annotations_supported]) %></td>
    </tr>
    <tr>
      <td><%= f.blabel :hijack_crocodoc_sessions, :en => "Hijack Crocodoc Sessions" %></td>
      <td><%= f.check_box :hijack_crocodoc_sessions, checked: Canvas::Plugin.value_to_boolean(settings[:hijack_crocodoc_sessions]) %></td>
    </tr>
  </table>
<% end %>
