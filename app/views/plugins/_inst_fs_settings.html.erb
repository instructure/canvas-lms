<%= fields_for :settings do |f| %>
  <table style="width: 500px;" class="formtable">
    <tr>
      <td colspan="2">
        <p><%= t(:description, <<~TEXT)
          Hosts uploaded files with the Inst-FS service.
          TEXT
        %></p>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :migration_rate, :en => "Chance of migrating older files into Inst-FS on access (0 to 100)" %></td>
      <td>
        <%= f.text_field :migration_rate, value: settings[:migration_rate] %>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :service_worker, :en => "Use service worker to authenticate file accesses in Safari 13+" %></td>
      <td>
        <%= f.check_box :service_worker, checked: Canvas::Plugin.value_to_boolean(settings[:service_worker]) %>
      </td>
    </tr>
  </table>
<% end %>
