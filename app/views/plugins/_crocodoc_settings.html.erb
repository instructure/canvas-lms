<%= fields_for :settings do |f| %>
  <table style="width: 500px;" class="formtable">
    <tr>
      <td colspan="2">
        <p><%= t :description, "This plugin integrates with Crocodoc to provide an HTML5 document previewer which provides teachers and students with the ability to annotate documents." %></p>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :api_key, :en => "Crocodoc API Key" %></td>
      <td><%= f.text_field :api_key, value: settings[:api_key] %></td>
    </tr>
    <tr>
      <td><%= f.blabel :disable_polling, :en => "Disabling polling for document status" %></td>
      <td><%= f.check_box :disable_polling, checked: Canvas::Plugin.value_to_boolean(settings[:disable_polling]) %></td>
    </tr>
  </table>
<% end %>

