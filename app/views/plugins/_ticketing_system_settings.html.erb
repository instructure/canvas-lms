<%= fields_for :settings do |f| %>
  <table style="width: 500px;" class="formtable">
    <tr>
      <td colspan="2">
        <%= mt :description, "Ticketing System setup" %>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :type, :en => "Ticketing System type" %></td>
      <td><%= f.select :type, Canvas::Plugins::TicketingSystem.registered_extensions.map { |p| [p.name, p.id] }, selected: settings[:type] %>
    </tr>
  </table>
<% end %>
