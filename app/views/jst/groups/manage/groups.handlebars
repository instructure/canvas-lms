<h2>{{#t "groups"}}Groups{{/t}}</h2>

{{#if ENV.IS_LARGE_ROSTER}}
<input
  type="text"
  class="filterable"
  placeholder="{{#t "search_groups"}}Search groups{{/t}}"
  aria-label="{{#t "search"}}Search{{/t}}"
>
{{/if}}

{{#if collection.length}}
  <ul class="collectionViewItems groups unstyled"></ul>
  <div class="paginatedLoadingIndicator"></div>
{{else}}
  <p>
    {{#t "no_groups"}}No groups.{{/t}}
  </p>
{{/if}}
