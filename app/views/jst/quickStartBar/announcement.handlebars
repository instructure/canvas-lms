<form class="newItemForm">
  <div class="box-content controls">

    <div class="row-fluid">
      <input placeholder="Announcement title" class="span12 expander" name="title" type="text">
    </div>

    <div class="row-fluid expandee">
      <textarea placeholder="Announcement message" class="span12" rows="3" name="message"></textarea>
    </div>

    <div class="row-fluid expandee">
      <div class="span10 course_finder">
        <input
          name="course_ids"
          class="contextSearch span10"
          type="text"
          data-finder_url="/conversations/find_recipients">
      </div>
      <div class="span2">
        <button type="submit" class="button small-button button-wide" data-text-while-loading="{{#t "saving"}}Saving...{{/t}}">Announce</button>
      </div>
    </div>



  </div>
</form>
