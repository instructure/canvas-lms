<form action='#' id='edit_assignment_form' style='padding: 5px; width: 400px'>
  <div class="event-details-content">
    <table class="formtable" style="width: 100%;">
      <tr>
        <td>{{#t "due"}}Due:{{/t}}</td>
        <td>
          <input class="datetime_field" id="assignment_override_due_at" name="assignment_override[due_at]" size="30" style="width: 150px;" type="text" />
        </td>
      </tr>
      <tr class="context_select">
        <td>{{#t "calendar"}}Calendar:{{/t}}</td>
        <td>
          <select class="context_id">
            {{#each contexts}}
              {{#if can_create_assignments}}
                <option value="{{asset_string}}">{{name}}</option>
              {{/if}}
            {{/each}}
          </select>
        </td>
      </tr>
    </table>
    <div class="popover-links-holder event-details-footer pull-right">
      <a href="#" class="event_button btn btn-secondary more_options_link">{{#t "links.more_options"}}More Options{{/t}}</a>
      <button type="submit" class="event_button btn btn-primary">{{#t "#buttons.submit"}}Submit{{/t}}</button>
    </div>
  </div>
</form>
