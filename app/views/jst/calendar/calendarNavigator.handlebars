<span class="navigation_buttons">
  <button class="navigate_prev btn-small">
    <i class="icon-arrow-left" aria-hidden="true"></i>
    <span class="screenreader-only">{{#t "previous"}}Previous{{/t}}</span>
  </button>
  <button class="navigate_today btn-small">{{#t "today"}}Today{{/t}}</button>
  <button class="navigate_next btn-small">
    <i class="icon-arrow-right" aria-hidden="true"></i>
    <span class="screenreader-only">{{#t "next"}}Next{{/t}}</span>
  </button>
</span>
<h2 class="navigation_title" {{#if showPicker}}role="button" tabindex="0"{{/if}}></h2>
{{#if showPicker}}
<span class="date_field_wrapper">
  <input type="text" name="start date" style="width: 100px;" class="date_field"
         aria-label="{{#t "enter_jump_date"}}Enter a date and press enter to jump to that date.{{/t}}" />
  <span class="screenreader-only suggestion_reader" role="status" aria-live="polite"></span>
</span>
{{/if}}
