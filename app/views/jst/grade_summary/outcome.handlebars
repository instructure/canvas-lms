<div class="outcome-icon {{status}}" data-tooltip="top" title="{{statusTooltip}}" aria-label="{{#t}}Outcome: {{title}} has a status of {{statusTooltip}}{{/t}}">
  {{#if scoreDefined}}
    {{#ifEqual status 'mastery'}}
      {{addIcon 'check'}}
    {{else}}
      {{#ifEqual status 'near'}}
        {{addIcon 'plus'}}
      {{else}}
        {{addIcon 'x'}}
      {{/ifEqual}}
    {{/ifEqual}}
  {{else}}
    <i class="icon-empty"></i>
  {{/if}}
</div>
<div class="outcome-properties">
  <div class="title" data-tooltip title="{{#if hover_name}}{{hover_name}}{{/if}}">
    <h4>{{friendly_name}}</h4>
  </div>
  <div class="description">{{{description}}}</div>
</div>
<div class="alignment-info">
  <a href="#tab-outcomes/{{id}}" aria-haspopup='true' aria-owns='outcome_detail'>
    {{#t 'alignment_count'}}<strong>{{count}}</strong> Alignments{{/t}}
  </a>
  <i class="icon-more" aria-label="{{#t}}press spacebar for more details on this outcome{{/t}}" tabindex="0"></i>
</div>
