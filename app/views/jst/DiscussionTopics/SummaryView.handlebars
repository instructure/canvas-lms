{{#if permissions.moderate}}
  <div class="discussion-column">
    <span class="discussion-drag-handle"
          tabindex="0"
          data-tooltip
          title="{{#t "drag_up_or_down_to_reorder"}}Drag up or down to reorder{{/t}}"></span>
  </div>
{{/if}}
{{#if permissions.delete}}
  <label class="discussion-column">
    <input class="toggleSelected" type="checkbox" {{#if selected}}checked{{/if}} >
  </label>
{{/if}}
<div class="discussion-column image-block">
  <div class="image-block-image">
    {{>api_avatar author}}
  </div>
  <div class="image-block-content">
    <div class="discussion-unread-container">
      <div class="new-and-total-badge">
        <span class="new-items"
              data-tooltip
              title="{{unread_count_tooltip}}">{{#if unread_count}}{{unread_count}}{{/if}}</span>
        <span class="total-items"
              data-tooltip
              title="{{reply_count_tooltip}}">{{#if discussion_subentry_count}}{{discussion_subentry_count}}{{/if}}</span>
      </div>
    </div>
    <div class="discussion-last-reply">
      {{friendlyDatetime last_reply_at}}
    </div>
    <div class="discussion-info-icons">
      {{#if locked}}
        <i data-tooltip
           title="{{#t "locked"}}This topic is closed for comments{{/t}}"
           class="icon-lock"></i>
      {{/if}}

      {{#if podcast_url}}
        <a href="{{podcast_url}}"
           data-tooltip
           title="{{#t "topic_podcast_feed"}}Topic Podcast Feed{{/t}}"><i class="icon-rss"></i></a>
      {{/if}}

      {{#each attachments}}
        <a href="{{url}}"
           data-tooltip
           title="{{#t "attached_file_name"}}Attached: {{display_name}}{{/t}}"><i class="icon-paperclip"></i></a>
      {{/each}}
      {{#if assignment_id}}
        <i data-tooltip
           title="{{#t "this_topic_is_used_for_grading"}}This topic is used for grading{{/t}}"
           class="icon-assignment"></i>
      {{/if}}
    </div>
    <a href="{{html_url}}" class="discussion-title" >{{title}}</a>
    {{#if author}}
      <a class="discussion-author" href="{{author.html_url}}">{{author.display_name}}</a>
    {{/if}}
    <div class="discussion-summary ellipsis">{{summary}}</div>
  </div>
</div>
