<form action='{{_formAction}}{{#if id}}/{{id}}{{/if}}' method='{{#if id}}PUT{{else}}POST{{/if}}' class="key_form">
<table class='formtable'>
    <tr>
        <td><label for='key_name'>{{#t "key_name"}}Key Name:{{/t}}</label></td>
        <td><input type='text' id='key_name' name='developer_key[name]' value='{{ name }}'/>
    </tr>
    <tr>
        <td><label for='email'>{{#t "owner_email"}}Owner Email:{{/t}}</label></td>
        <td><input type='text' id='email' name='developer_key[email]' value='{{ email }}'/>
    </tr>
    {{#if redirect_uri}}
    <tr>
        <td><label for='redirect_uri'>{{#t "redirect_uri"}}Redirect URI (Legacy):{{/t}}</label></td>
        <td><input type='text' id='redirect_uri' name='developer_key[redirect_uri]' value='{{ redirect_uri }}'/>
    </tr>
    {{/if}}
    <tr>
        <td><label for='redirect_uris'>{{#t "redirect_uris"}}Redirect URIs:{{/t}}</label></td>
        <td><textarea id='redirect_uris' name='developer_key[redirect_uris]' class="input-block-level">{{ redirect_uris }}</textarea>
    </tr>
    <tr>
        <td><label for='icon_url'>{{#t "icon_url"}}Icon URL:{{/t}}</label></td>
        <td><input type='text' id='icon_url' name='developer_key[icon_url]' value='{{ icon_url }}'/>
    </tr>
    <tr>
        <td colspan='2'>
            <div class='button-container'>
              <button type='button' class='btn dialog_closer cancel'>{{#t "cancel"}}Cancel{{/t}}</button>
              <button type='submit' class='btn btn-primary submit'>{{#t "save_key"}}Save Key{{/t}}</button>
            </div>
        </td>
    </tr>
</table>
</form>
