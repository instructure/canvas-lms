<div class="ig-row" id="conf_{{id}}">
  <div class="ig-row__layout">
    <div class="ig-info">
      {{#if recording}}
        <a class="ig-title element_toggler"
            href="#"
            aria-controls="conference-{{id}}"
            aria-expanded="false"
            role="button">
          <i class="icon-mini-arrow-right auto_rotate"></i>
          {{title}}
        </a>
      {{else}}
        <span class="ig-title">{{title}}</span>
      {{/if}}
      <div class="ig-details">
        <div class="ig-details__item">
          {{dateString ended_at}}
        </div>
        {{#if description}}
          <div class="ig-details__item ig-details__item--wrap-text">
            {{description}}
          </div>
        {{/if}}
        {{#if recording}}
          <div class="ig-details__item">
            {{#if multipleRecordings}}
              {{#t "recordings"}}{{recordingCount}} Recordings{{/t}}
            {{else}}
              {{#t "recording"}}1 Recording{{/t}}
            {{/if}}
          </div>
        {{/if}}
      </div>
    </div>
    <div class="ig-admin">
      {{#if permissions.delete}}
        <a class="al-trigger al-trigger-gray" role="button" aria-haspopup="true" aria-owns="{{id}}-content-1" href="#">
          <i class="icon-settings"></i>
          <i class="icon-mini-arrow-down"></i>
          <span class="screenreader-only">{{#t "settings"}}Settings{{/t}}</span>
        </a>
        <ul id="{{id}}-content-1" class="al-options" role="menu" aria-hidden="true" aria-expanded="false" aria-activedescendant="{{id}}-content-2">
          <li role="presentation">
            <a href="{{url}}"
                class="icon-trash  delete_conference_link"
                id="{{id}}-content-3"
                role="menuitem"
                aria-label="{{#t "delete"}}Delete{{/t}}"
                title="{{#t "delete"}}Delete{{/t}}">{{#t "delete"}}Delete{{/t}}
            </a>
          </li>
        </ul>
      {{/if}}
    </div>
  </div>
</div>
{{#if recording}}
  <div class="ig-sublist" id="conference-{{id}}" style="display: none;">
    <ul>
      {{#each recordings}}
        <li>
          {{#if recording_vendor}}
            {{#ifEqual recording_vendor "big_blue_button"}}
              <div class="ig-row" data-id="{{recording_id}}" style="text-align: center;">
                <div class="ig-row__layout">
                  <div class="ig-info">
                    <div class="ig-details">
                      {{#each recording_formats}}
                        <a {{#if ../../published}}href="{{playback_url}}" target="_blank"{{/if}}
                          class="ig-title" data-id="{{../recording_id}}" style="line-height: inherit;" data-format="{{type}}">
                          {{type}}
                        </a>
                      {{/each}}
                      {{dateString ended_at}}
                      &#124;&nbsp;
                      {{durationToString duration_minutes}}
                    </div>
                  </div>
                  {{#if ../../../permissions.delete}}
                    <div class="ig-loader" data-id="{{recording_id}}" style="display: none;">
                      <img src="/images/ajax-loader-black-on-white.gif" class="loader" />
                    </div>
                    <div class="ig-button" data-id="{{recording_id}}" data-url="{{../../../../url}}">
                      {{#ifNull ../protected}}
                      {{else}}
                        <img src="/images/ajax-loader-black-on-white.gif" class="loader" data-action="protect" style="display: none;" />
                        <a class="btn btn-small protect{{#if ../protected}} icon-lock{{else}} icon-unlock{{/if}}" data-protect="{{#if ../protected}}true{{else}}false{{/if}}">
                            {{#if ../protected}}
                              {{#t 'protected'}}Protected{{/t}}
                            {{else}}
                              {{#t 'unprotected'}}Unprotected{{/t}}
                            {{/if}}
                        </a>
                      {{/ifNull}}
                      <img src="/images/ajax-loader-black-on-white.gif" class="loader" data-action="publish" style="display: none;" />
                      <a class="btn btn-small publish{{#if ../published}} icon-publish{{else}} icon-unpublish{{/if}}" data-publish="{{#if ../published}}true{{else}}false{{/if}}">
                          {{#if ../published}}
                            {{#t 'published'}}Published{{/t}}
                          {{else}}
                            {{#t 'unpublished'}}Unpublished{{/t}}
                          {{/if}}
                      </a>
                      <a class="btn btn-small icon-trash delete_recording_link">
                        {{#t "delete"}}Delete{{/t}}
                      </a>
                    </div>
                  {{/if}}
                </div>
                {{#ifEqual images.length 0}}
                {{else}}
                  <div class="recording-thumbnails{{#if ../../published}}{{else}} hidden{{/if}}" data-id="{{recording_id}}">
                    {{#each images}}
                      <img src="{{#if ../../published}}{{thumbnail_url}}{{/if}}" alt="{{title}}" class="recording-thumbnail" data-src="{{thumbnail_url}}" />
                      <img src="{{#if ../../published}}{{thumbnail_url}}{{/if}}" class="large-thumbnail" data-src="{{thumbnail_url}}" />
                    {{/each}}
                    <small class="help-text">Hover over an image to view it in full size.</small>
                  </div>
                {{/ifEqual}}
              </div>
            {{/ifEqual}}
          {{else}}
            <div class="ig-row">
              <div class="ig-row__layout">
                <div class="ig-info">
                  <div class="ig-details">
                    <a href="{{playback_url}}" target="_blank" class="ig-title">
                      {{title}}
                    </a>
                    {{dateString created_at}}
                    &nbsp;&#124;&nbsp;
                    {{durationToString duration_minutes}}
                  </div>
                </div>
                <div class="ig-button">
                  <a class="btn btn-small" target="_blank" href="{{playback_url}}">
                    {{#t "view"}}View{{/t}}
                  </a>
                </div>
              </div>
            </div>
          {{/if}}
        </li>
      {{/each}}
    </ul>
  </div>
{{/if}}
