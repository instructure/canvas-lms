<div class="registration-dialog">
  <form class="form-horizontal bootstrap-form" method="post" action="/users">
    <div class="control-group">
      <label class="control-label" for="student_join_code">{{#t "labels.join_code"}}Join Code{{/t}}</label>
      <div class="controls">
        <input type="text" id="student_join_code" name="user[self_enrollment_code]">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="student_name">{{#t "labels.name"}}Full Name{{/t}}</label>
      <div class="controls">
        <input type="text" id="student_name" name="user[name]">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="student_username">{{#t "labels.username"}}Username{{/t}}</label>
      <div class="controls">
        <input type="text" id="student_username" name="pseudonym[unique_id]">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="student_password">{{#t "labels.password"}}Password{{/t}}</label>
      <div class="controls">
        <input type="password" id="student_password" name="pseudonym[password]">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="student_password_confirmation">{{#t "labels.password_confirmation"}}Confirm Password{{/t}}</label>
      <div class="controls">
        <input type="password" id="student_password_confirmation" name="pseudonym[password_confirmation]">
      </div>
    </div>
    {{#if terms_required}}
    <div class="control-group">
      <div class="controls">
        <label class="checkbox">
          <input type="checkbox" name="user[terms_of_use]" value="1">
          {{#t "agree_to_terms_and_pp"}}You agree to the <a href="{{terms_url}}" target="_blank">terms of use</a> and acknowledge the <a href="{{privacy_url}}" target="_blank">privacy policy</a>.{{/t}}
        </label>
      </div>
    </div>
    {{/if}}
    <div class="control-group">
      <div class="controls">
        <input type="hidden" name="user[initial_enrollment_type]" value="student">
        <input type="hidden" name="self_enrollment" value="1">
        <input type="hidden" name="pseudonym_type" value="username">
        <button class="btn btn-primary" type="submit">{{#t "buttons.start_learning"}}Start Learning{{/t}}</button>
      </div>
    </div>
  </form>
</div>
