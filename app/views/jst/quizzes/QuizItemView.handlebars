<div id="summary_quiz_{{id}}"
  {{#if can_update}}
    class="
    ig-row
    {{#if publishable}}ig-publishable{{/if}}
    {{#if published}}ig-published{{/if}}
    ig-editable"
  {{else}}
    class="ig-row"
  {{/if}}
>
  <div class="ig-row__layout">
    <a href="{{url}}" class="ig-title ellipses">
      <i class="icon-quiz"></i> {{title_label}}
    </a>

    <div class="ig-details">
      <div class="ellipses date-available" data-view="date-available"></div>
      <div class="ellipses date-due" data-view="date-due"></div>
      <div class="ellipses">{{possible_points_label}}</div>
      <div class="ellipses">{{question_count_label}}</div>
    </div>

    {{#if can_update}}
    <div class="ig-admin">

      {{#if post_to_sis_enabled}}
        {{#if post_to_sis}}
        <span class="post-to-sis-status enabled">
          <i class="icon-post-to-sis" title='{{#t}}Post grade to SIS enabled. Click to toggle.{{/t}}' data-tooltip></i>
          <span class="screenreader-only">{{#t}}The grade for this assignment will sync to the student information system. Click here to toggle this setting.{{/t}}</span>
        </span>
        {{else}}
        <span class="post-to-sis-status disabled">
          <i class="icon-post-to-sis" title='{{#t}}Post grade to SIS disabled. Click to toggle.{{/t}}' data-tooltip></i>
          <span class="screenreader-only">{{#t}}The grade for this assignment will not sync to the student information system. Click here to toggle this setting.{{/t}}</span>
        </span>
        {{/if}}
      {{/if}}
      <span data-view="publish-icon" class="publish-icon"></span>

      <div class="inline-block">
        <a class="al-trigger al-trigger-gray" role="button" aria-haspopup="true" aria-owns="ui-id-{{id}}-1" href="#">
          <i class="icon-settings"></i>
          <i class="icon-mini-arrow-down"></i>
          <span class="screenreader-only">{{#t "settings"}}Settings{{/t}}</span>
        </a>

        <ul id="ui-id-{{id}}-1" class="al-options" role="menu" tabindex="0" aria-hidden="true" aria-expanded="false" aria-activedescendant="ui-id-{{id}}-2">
          <li role="presentation">
            <a href="{{edit_url}}" id="ui-id-{{id}}-2" class="icon-edit" tabindex="-1" role="menuitem" title='{{#t "title_edit"}}Edit Quiz{{/t}}'>{{#t "links.edit"}}Edit{{/t}}</a>
          </li>
          <li role="presentation">
            <a href="{{url}}" id="ui-id-{{id}}-3" class="delete-item icon-trash" tabindex="-1" role="menuitem" title='{{#t "title_delete"}}Delete Quiz{{/t}}'>{{#t "links.delete"}}Delete{{/t}}</a>
          </li>
          {{>ExternalTools/external_tools_menu quiz_menu_tools}}
        </ul>
      </div>
    </div>
    {{/if}}
  </div>
</div>
