<li class="attachment clearfix" tabindex="0"
    title="{{#t "titles.attachment"}}File to attach{{/t}}">
      <a href="#"
         class="remove_link icon-end black pull-right"
         title="{{#t "titles.remove_attachment"}}Remove attachment{{/t}}">
        <span class="screenreader-only">
          {{#t "titles.remove_attachment"}}Remove attachment{{/t}}
        </span>
      </a>
      <div class="attachment-icon" aria-hidden="true">
        <i class="icon-paperclip"></i>
      </div>
