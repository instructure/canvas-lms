{{#if this.length}}
  <h2>External Feeds</h2>
{{/if}}
<ul class="right-side-list">
  {{#each this}}
    <li class="external_feed">
      <a class="close" data-delete-feed-id="{{id}}" href="#">Ã—</a>
      <a href="{{url}}">
        <b>
          {{display_name}}
        </b>
        {{#if header_match}}
          <em>{{#t "keyword"}}Keyword:{{/t}} {{header_match}}</em>
        {{/if}}
        {{#if external_feed_entries_count}}
          <em>{{external_feed_entries_count}} {{#t "posts_added"}}Posts Added{{/t}}</em>
        {{/if}}
      </a>
    </li>
  {{/each}}
  <li>
    <a href="#" class="element_toggler" aria-controls="add_external_feed_form">
      <i class="icon-rss-add"></i>
      {{#t "links.add_external_feed"}}Add External Feed{{/t}}
    </a>
  </li>
</ul>

<form class="boostrap-form" id="add_external_feed_form" style="display: none; font-size: 11px">
  <h2>{{#t "add_a_new_feed"}}Add a New Feed{{/t}}</h2>

  <label for="external_feed_url">
    {{#t "descriptions.add_new_feed"}}
    You can automatically add posts from an RSS or Atom feed as announcements for this course.
    Just paste the feed URL below and any new entries will be added.
    {{/t}}
  </label>
  <input type="text"
         id="external_feed_url"
         name="url"
         style="width: 98%"
         placeholder="Feed URL">
  <div>
    <select name="verbosity" style="width: 100%">
      <option>{{#t "options.content_to_post"}}--Content to post--{{/t}}</option>
      <option value="full">{{#t "options.full_article"}}Full article{{/t}}</option>
      <option value="truncate">{{#t "options.truncated"}}Truncated{{/t}}</option>
      <option value="link_only">{{#t "options.link_only"}}Link only{{/t}}</option>
    </select>
  </div>
  <label class="checkbox">
    <input class="element_toggler"
           aria-controls="header_match_container"
           type="checkbox"> {{#t "labels.match_phrase_checkbox"}}Only add posts with a specific phrase in the title{{/t}}
  </label>
  <div id="header_match_container" style="display:none">
    <input type="text"
           name="header_match"
           style="width: 98%"
           placeholder="{{#t "phrase_to_look_for"}}Phrase to look for{{/t}}">
  </div>
  <div>
    <button type="submit"
            data-text-while-loading="{{#t "buttons.adding_feed"}}Adding feed...{{/t}}"
            class="btn btn-small">{{#t "buttons.add_feed"}}Add Feed{{/t}}</button>
  </div>
</form>
