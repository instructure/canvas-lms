<% css_bundle :assignments %>
<div id='assignment_show'>
  <div class='assignment-title'>
    <div class='title-content'>
      <h1 class="title">
        <%= @assignment.title %>
      </h1>
    </div>
    <div class='assignment-buttons'>
      <span style="display: inline-block">
        <%= render "shared/mark_as_done" %>
      </span>
    </div>
  </div>
  <% if can_do(@context, @current_user, :participate_as_student) %>
    <%=  render "student_assignment_overview"  %>
  <%  end %>
</div>
<% if @assignment && @assignment.description.present? %>
  <div class="description user_content" style="margin: 20px">
    <%= user_content(@assignment.description) %>
  </div>
<% end %>
