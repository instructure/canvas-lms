<% content_for :page_title do %><%= join_title t(:page_title, "Gradebook"), @context.name %><% end %>
<% @body_classes << 'full-width' %>

<%= render :partial => "gradebook" %>

<% content_for :keyboard_navigation do %>
  <ul class="navigation_list" tabindex="-1">
    <li>
      <span class="keycode"><%= t('keycodes.next_assignment', "right") %></span>
      <span class="colon">:</span>
      <span class="description"><%= t('keycode_descriptions.next_assignment', "Next Assignment") %></span>
    </li>
    <li>
      <span class="keycode"><%= t('keycodes.previous_assignment', "left") %></span>
      <span class="colon">:</span>
      <span class="description"><%= t('keycode_descriptions.previous_assignment', "Previous Assignment") %></span>
    </li>
    <li>
      <span class="keycode"><%= t('keycodes.next_student', "down") %></span>
      <span class="colon">:</span>
      <span class="description"><%= t('keycode_descriptions.next_student', "Next Student") %></span>
    </li>
    <li>
      <span class="keycode"><%= t('keycodes.previous_student', "up") %></span>
      <span class="colon">:</span>
      <span class="description"><%= t('keycode_descriptions.previous_student', "Previous Student") %></span>
    </li>
    <li>
      <span class="keycode"><%= t('keycodes.edit_cell', "enter") %></span>
      <span class="colon">:</span>
      <span class="description"><%= t('keycode_descriptions.edit_cell', "Edit Cell") %></span>
    </li>
    <li>
      <span class="keycode"><%= t('keycodes.more_information', "i") %></span>
      <span class="colon">:</span>
      <span class="description"><%= t('keycode_descriptions.more_information', "More Information for Current Cell") %></span>
    </li>
    <li>
      <span class="keycode"><%= t('keycodes.refresh_gradebook', "r") %></span>
      <span class="colon">:</span>
      <span class="description"><%= t('keycode_descriptions.refresh_gradebook', "Refresh Gradebook") %></span>
    </li>
  </ul>
<% end %>

