ic-actions {
  position: relative;
}

ic-actions ic-menu-trigger {
  display: inline-block;
  padding: 6px;
  border: 1px solid transparent;
  border-radius: 3px 3px 0 0;
  border-bottom: none;
  z-index: 1;
  position: relative;
}

ic-actions ic-menu-trigger i:before {
  color: #bbb;
}

ic-actions ic-menu.is-open ic-menu-trigger {
  border-color: #aaa;
  background: #fff;
  z-index: 3;
}

ic-actions ic-menu-trigger:hover i:before,
ic-actions ic-menu.is-open ic-menu-trigger i:before {
  color: #555;
}

ic-actions ic-menu-list {
  font-family: inherit;
  z-index: 2;
  top: 23px;
  right: 0px;
  border-radius: 3px 0px 3px 3px;
}

ic-actions.left ic-menu-list {
  right: auto;
  left: 0;
  border-radius: 0px 3px 3px 3px;
}

ic-actions ic-menu-item {
  font: inherit;
}

ic-actions ic-menu-item:focus {
  background: #0091DC;
}

