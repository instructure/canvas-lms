<div class="quiz-overview">
  {{#if isPreview}}
    <div class="quiz-preview">
      <h3>
        <i class="icon-warning" aria-label="Warning"></i>
        {{#t 'preview_of_draft_version'}}This is a preview of the draft version of the quiz{{/t}}
      </h3>
    </div>
  {{/if}}

  {{#if description}}
    <div class="row-fluid">
      <div class="span12 quiz-description user_content">
        {{{description}}}
      </div>
    </div>
  {{/if}}

  <div class="row-fluid quiz-attributes quiz-attributes-teacher">
    <dl class="span4 quiz-attribute-column">
      <dt>{{#t 'quiz_type'}}Quiz Type{{/t}}</dt>
      <dd>{{tQuizType}}</dd>

      <dt>{{#t 'points'}}Points{{/t}}</dt>
      <dd>{{pointsPossible}}</dd>

      <dt>{{#t 'time_limit'}}Time Limit{{/t}}</dt>
      <dd>
        {{#if timeLimit}}
          {{timeLimitWithMinutes}}
        {{else}}
          {{#t 'no_time_limit'}}None{{/t}}
        {{/if}}
      </dd>
    </dl>

    <dl class="span4 quiz-attribute-column">
      <dt>{{#t 'assignment_group'}}Assignment Group{{/t}}</dt>
      <dd>{{assignmentGroup.name}}</dd>
      <dt>{{#t 'attempts'}}Attempts{{/t}}</dt>
      <dd>
        {{#if unlimitedAllowedAttempts}}
          {{#t 'unlimited'}}Unlimited{{/t}}
        {{else}}
          {{allowedAttempts}}
        {{/if}}
      </dd>

      {{#if accessCode}}
        <dt>{{#t 'access_code'}}Access Code{{/t}}</dt>
        <dd>{{accessCode}}</dd>
      {{/if}}
    </dl>

    <dl class="span4 quiz-attribute-column">
      {{#if multipleAttemptsAllowed}}
        <dt>{{#t 'score_to_keep'}}Score To Keep{{/t}}</dt>
        <dd>{{tScoringPolicy}}</dd>
      {{/if}}

      <dt>{{#t 'show_responses'}}Show Responses{{/t}}</dt>
      <dd>
        {{#if alwaysShowResults}}
          {{#t 'always'}}Always{{/t}}
        {{else}}
          {{#if showResultsAfterLastAttempt}}
            {{#t 'show_after_last_attempt'}}After Last Attempt{{/t}}
          {{else}}
            {{#t 'never'}}Never{{/t}}
          {{/if}}
        {{/if}}
      </dd>

      <dt>{{#t "ip_filter"}}IP Filter{{/t}}</dt>
      <dd>
        {{#if ipFilter}}
          {{ipFilter}}
        {{else}}
          {{#t 'none'}}None{{/t}}
        {{/if}}
      </dd>
    </dl>
  </div>

  <table class="quiz-table table" id="due-dates-table">
    <thead>
      <tr>
        <th>{{#t 'due'}}Due{{/t}}</th>
        <th>{{#t 'for'}}For{{/t}}</th>
        <th>{{#t 'available_from'}}Available From{{/t}}</th>
        <th>{{#t 'until'}}Until{{/t}}</th>
      </tr>
    </thead>
    <tbody>
    {{#each allDates}}
      <tr>
        {{render "due_date_table_row" this}}
      </tr>
    {{/each}}
    </tbody>
  </table>

  {{partial "quiz/legacy_submissions"}}
</div>
