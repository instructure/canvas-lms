<div class="container-fluid" id="quiz-show">
  <div class="row-fluid edit-header">
    <div class="span7">
      <label class="screenreader-only">
        {{#t "quiz_title"}}Quiz Title{{/t}}
      </label>
      <h1>{{title}}</h1>
    </div>

    <div class="span3 teacher-action-buttons pull-right">
      {{ic-publish-button
        published=published
        disabled=canNotUnpublish
        on-publish='publish'
        on-unpublish='unpublish'
      }}

      <a {{bind-attr href="editURL"}} class="btn">
        <i class="icon-edit"></i>{{#t 'edit'}}Edit{{/t}}
      </a>
      {{#ic-menu}}
        {{#ic-menu-trigger}}
          <button class="btn">
            <i class="icon-settings"></i>
          </button>
        {{/ic-menu-trigger}}
      {{/ic-menu}}
    </div>
  </div>

  <div class="row-fluid" id="quiz-show-tabs">
    <ol>
      {{#link-to 'quiz.show' this tagName='li' replace=true}}
        {{#link-to 'quiz.show' this.id replace=true}}
          {{#t 'overview'}}Overview{{/t}}
        {{/link-to}}
      {{/link-to}}

      {{#link-to 'quiz.moderate' this tagName='li' replace=true}}
        {{#link-to 'quiz.moderate' this.id replace=true}}
          {{#t 'moderate'}}Moderate{{/t}}
        {{/link-to}}
      {{/link-to}}

      {{#link-to 'quiz.statistics' this tagName='li'}}
        {{#link-to 'quiz.statistics' this.id}}
          {{#t 'statistics'}}Statistics{{/t}}
        {{/link-to}}
      {{/link-to}}
    </ol>
  </div>

  <div class="tabs-content">
    {{outlet}}
  </div>
</div>
