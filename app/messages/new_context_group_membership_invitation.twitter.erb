<% define_content :link do -%>
  <%= polymorphic_url([asset.group.context, asset.group]) %>
<% end -%>
<%=
    case asset.group.context_type
    when 'Account'
      t :body_account, "Canvas Alert - Invitation: %{group} for the account %{account}", :group => asset.group.name, :account => asset.group.context.name
    else
      t :body_course, "Canvas Alert - Invitation: %{group} for the course %{course}.", :group => asset.group.name, :course => asset.group.context.name
    end
%>
