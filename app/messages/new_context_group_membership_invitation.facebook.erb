<% define_content :link do %>
  <%= polymorphic_url([asset.group.context, asset.group]) %>
<% end %>
<%=
    case asset.group.context_type
    when 'Account'
      t :body_account, "You've been invited to join the group %{group} for the account %{account}.", :group => %{<b><a href="#{content :link}">#{h asset.group.name}</a></b>}.html_safe, :account => asset.group.context.name
    else
      t :body_course, "You've been invited to join the group %{group} for the course %{course}.", :group => %{<b><a href="#{content :link}">#{h asset.group.name}</a></b>}.html_safe, :course => asset.group.context.name
    end
%>
