<% define_content :link do %><%= HostUrl.protocol %>://<%= HostUrl.default_host %>/users/<%= asset.id %><% end %>
<% define_content :subject do %>
  <%= t :subject, "New Teacher Registration" %>
<% end %>

<%= t :subject, "New Teacher Registration" %>

<%= t :body, "%{user} just registered as a teacher at %{website}.", :user => asset.name, :website => (HostUrl.context_host(asset.latest_pseudonym.account) rescue nil) || HostUrl.default_host %>

<%= before_label :school_name, "School Name" %> <%= asset.school_name %>
<%= before_label :school_position, "School Position" %> <%= asset.school_position %>
<%= before_label :phone, "Phone" %> <%= asset.phone %>
<%= before_label :email, "Email" %> <%= asset.email %>

<%= content :link %>
