<% define_content :link do %>
  <%= HostUrl.protocol %>://<%= HostUrl.context_host(asset.context) %>/<%= asset.context.class.to_s.downcase.pluralize %>/<%= asset.context_id %>/files/<%= asset.id %>
<% end %>
<%= t('body', 'A new file has been added for the course, %{name}:', :name => asset.context.name) %>

<b><a href="<%= content :link %>"><%= asset.title %></a></b> -- 
<%= asset.readable_size %>
