<% define_content :link do %>
  <%= HostUrl.protocol %>://<%= HostUrl.context_host(asset.context) %>/<%= asset.context.class.to_s.downcase.pluralize %>/<%= asset.context.id %>/pages/<%= asset.url %>
<% end %>

<% define_content :subject do %>
  <%= t :subject, "Updated Wiki Page: %{title}, %{user}", :title => asset.title.titleize, :user => asset.context.name %>
<% end %>

<%= t :body, "A page has been updated on the wiki for %{title} that may make your life easier.", :title => asset.context.name %>

<%= asset.title.titleize %>

<%= CanvasTextHelper.truncate_text(html_to_text(asset.body, :base_url => "#{HostUrl.protocol}://#{HostUrl.context_host(asset.context)}"), :max_length => 200) %>


<%= t :link_message, "You can review it here: %{link}", :link => content(:link) %>
