<% define_content :link do -%>
<%= HostUrl.protocol %>://<%= HostUrl.context_host(asset.group.context) %>/<%= asset.group.context.class.to_s.downcase.pluralize %>/<%= asset.group.context_id %>/groups/<%= asset.group.id %>
<% end -%>
<%=
    case asset.group.context_type
    when 'Account'
      t :body_account, 'Canvas Alert - New Group: %{group_name} for the account %{account}', :group_name => asset.group.name, :account => asset.group.context.name
    else
      t :body_course, 'Canvas Alert - New Group: %{group_name} for the course %{course}', :group_name => asset.group.name, :course => asset.group.context.name
    end
%>
