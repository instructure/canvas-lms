<% define_content :link do -%>
  <%= polymorphic_url([asset.group.context, asset.group]) %>
<% end -%>
<%=
    case asset.group.context_type
    when 'Account'
      t :body_account, 'Courseware Alert - New Group: %{group_name} for the account %{account}', :group_name => asset.group.name, :account => asset.group.context.name
    else
      t :body_course, 'Courseware Alert - New Group: %{group_name} for the course %{course}', :group_name => asset.group.name, :course => asset.group.context.name
    end
%>
