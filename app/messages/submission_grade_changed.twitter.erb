<% define_content :link do -%>
  <%= polymorphic_url([asset.assignment.context, asset.assignment, :submission], id: asset.user) %>
<% end -%>
<% if send_student_names(asset, user) %>
  <%= t "N1LMS Alert - Grade Change: %{date} for %{name}", :date => (datetime_string(force_zone(asset.graded_at)) rescue t(:no_date_set, "No Date Set")), name: asset.user.name %>
<% else %>
  <%= t :tweet, "N1LMS Alert - Grade Change: %{date}", :date => (datetime_string(force_zone(asset.graded_at)) rescue t(:no_date_set, "No Date Set")) %>
<% end %>

<% if asset.score -%>
<%= t :score, "score:  %{score} out of %{total}", :score => asset.score, :total => (asset.assignment.points_possible || t(:not_applicable, "N/A")) %>
<% end -%> <%= t(:score_pending, "(pending review)") if asset.pending_review? %>