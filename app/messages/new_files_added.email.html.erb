<% define_content :link do %>
  <%= HostUrl.protocol %>://<%= HostUrl.context_host(asset.context) %>/<%= asset.context.class.to_s.downcase.pluralize %>/<%= asset.context_id %>/files
<% end %>

<% define_content :subject do %>
  <%= t('subject', '%{count} new files added for the course, %{name}:', 
          :count => data.count,
          :name => asset.context.name) %>
<% end %>

<p><%= t('body', '%{count} new files have been added for the course, %{name}:', 
        :count => data.count,
        :name => asset.context.name) %></p>

<p><a href="<%= content :link %>"><%= t 'link', 'You can view them here' %></a></p>
