<% define_content :link do %>
  <%= HostUrl.protocol %>://<%= HostUrl.context_host(asset.context) %>/<%= asset.context.class.to_s.downcase.pluralize %>/<%= asset.context_id %>/discussion_topics/<%= asset.id %>
<% end %>
<%= t :subject, "Canvas Alert - Topic: %{discussion_topic}, %{course}", :discussion_topic => asset.title, :course => asset.context.name %>
<%= strip_and_truncate(asset.message, :max_length => 50) %>
