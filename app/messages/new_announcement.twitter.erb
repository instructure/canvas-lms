<% define_content :link do %>
  http://<%= HostUrl.context_host(asset.context) %>/<%= asset.context.class.base_ar_class.to_s.downcase.pluralize %>/<%= asset.context_id %>/announcements/<%= asset.id %>
<% end %>
<%= t :body, "Canvas Alert - Announcement: %{title}, %{course}.", :title => asset.title, :course => asset.context.name %>
<%= strip_and_truncate(asset.message, :max_length => 50) %>
