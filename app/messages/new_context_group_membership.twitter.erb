<% define_content :link do -%>
<%= HostUrl.protocol %>://<%= HostUrl.context_host(asset.group.context) %>/<%= asset.group.context.class.to_s.downcase.pluralize %>/<%= asset.group.context_id %>/groups
<% end -%>
<%=
    case asset.group.context_type
    when 'Account'
      t :body_account, "Canvas Alert - New Group: %{group} for the account %{account}", :group => asset.group.name, :account => asset.group.context.name
    else
      t :body_course, "Canvas Alert - New Group: %{group} for the course %{course}", :group => asset.group.name, :course => asset.group.context.name
    end
%>