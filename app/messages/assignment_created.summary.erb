  http://<%= HostUrl.context_host(asset.context) %>/<%= asset.context.class.to_s.downcase.pluralize %>/<%= asset.context_id %>/assignments/<%= asset.id %>
<% end %>

<% define_content :subject do %>
  Assignment Created - <%= asset.title %>: <%= asset.context.name %>
<% end %>

